{
  "workbench.colorTheme": "Modern Purple Theme",
  "workbench.iconTheme": "material-icon-theme",
  "git.ignoreMissingGitWarning": true,

  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode",
    "editor.formatOnSave": true
  },
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "liveServer.settings.donotVerifyTags": true,
  "editor.codeActionsOnSave": {},
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.language.brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "editor.fontSize": 20,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "window.titleBarStyle": "custom",
  "editor.stickyScroll.enabled": false,
  "editor.mouseWheelZoom": true,
  "explorer.compactFolders": false,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "workbench.settings.applyToAllProfiles": ["editor.fontFamily"],
  "window.customTitleBarVisibility": "never",
  "workbench.editor.openSideBySideDirection": "down",
  "liveServer.settings.donotShowInfoMsg": true,
  "files.autoSave": "onWindowChange",
  "emmet.includeLanguages": {
    "erb": "html",
    "html.erb": "html",
    "vue": "html",
    "blade.php": "html"
  },
  "files.associations": {
    "*.embeddedhtml": "html",
    "*.blade.php": "html"
  },
  "git.autofetch": true,
  "workbench.panel.showLabels": false,
  "chat.commandCenter.enabled": false,
  "workbench.navigationControl.enabled": false,
  "editor.allowVariableFonts": false,
  "terminal.integrated.fontFamily": "JetBrains Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "bottom",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.wordWrap": "on",
  "diffEditor.ignoreTrimWhitespace": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "breadcrumbs.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "markdown.marp.themes": [
    // "./beam.css",
    // "./border.css",
    // "./gradient.css",
    // "./graph_paper.css",
    "./*.css",


    "./themes/academic.css",

    "./style/arendt.css",
    "./style/descartes.css",
    "./style/einstein.css",
    "./style/freud.css",
    "./style/godel.css",
    "./style/hegel.css",
    "./style/heidegger.css",
    "./style/hume.css",
    "./style/husserl.css",
    "./style/jobs.css",
    "./style/kant.css",
    "./style/king.css",
    "./style/leibniz.css",
    "./style/orwell.css",
    "./style/pascal.css",
    "./style/plato.css",
    "./style/schema.css",
    "./style/simple.css",
    "./style/socrates.css",
    "./style/structure.css",
    "./style/turing.css",
    "./style/weber.css",
    //"./style/*.css",


    "./css/*.css",
    
    "./css/neobeam.css",
    "./css/neobeam-ecobeam.css",

    "./dracula/dracula.css",

    "./transtions/*.scss",

    "./tux/css/neobeam.css",
    "./tux/css/neobeam-ecobeam.css",
    "./tux/css/neobeam-ecobeam-grid.css",

    "./tum-marp-template/themes/tum.css"
  ],
  "markdown.marp.exportType": "html",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "chat.disableAIFeatures": true,
}
